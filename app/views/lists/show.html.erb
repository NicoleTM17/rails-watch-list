<h2><%= @list.name %></h2>

<h3>Movie</h3>
<ul class="list-group">
  <% @list.movies.each do |movie| %>
    <% @bookmark = Bookmark.find_by(movie: movie, list: @list) %>
    <li class="list-group-item w-50"> <strong>Movie:</strong> <%=movie.title%> <div><strong>Overview:</strong> <%=movie.overview%></div><%=movie.poster_url%> <div><strong>Rating:</strong> <%=movie.rating%></div>
   <div><%= link_to "Delete", bookmark_path(@bookmark), class:"text-decoration-none", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></div> </li>
  <% end %>
</ul>

<div><%= link_to "Add a movie to the list", new_list_bookmark_path(@list), class:"text-decoration-none"%></div>
<div><%= link_to "Back to watchlist", lists_path, class:"text-decoration-none" %></div>

