<h1>Create a new list</h1>
<%= simple_form_for [@list] do |f| %>
  <%= f.input :name, input_html: { class: 'form-control form-control-sm m-3 w-25' }, label_html: {class: 'm-3'}, placeholder: "Shrek 2" %>
  <%= f.submit class: "btn btn-primary m-3 my-3" %>
<% end %>

<%= link_to "Back to watchlist", lists_path, class:"text-decoration-none m-3" %>
