<h3>Bookmark</h3>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment, input_html: { class: 'form-control form-control-sm m-3 w-50' }, label_html: {class: 'm-3'} %>
  <%= f.association :movie, input_html: { class: 'form-control form-control-sm m-3 w-25' }, label_html: {class: 'm-3'} %>
  <%= f.submit class: "btn btn-primary m-3 my-3" %>
<% end %>

<%= link_to "Back to movie list", list_path(@list), class:"text-decoration-none m-3 p-2" %>
